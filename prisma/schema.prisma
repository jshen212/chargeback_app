// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  @@map("session")
}

model Shop {
  id                    String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  shopDomain            String   @unique @map("shop_domain")
  accessToken           String?  @map("access_token")
  active                Boolean  @default(true)
  plan                  String?
  createdAt             DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt             DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)
  
  // Billing fields
  billingActive         Boolean  @default(false) @map("billing_active")
  billingSubscriptionId String?  @map("billing_subscription_id")
  billingPlan           String?  @map("billing_plan")
  trialStartDate        DateTime? @map("trial_start_date") @db.Timestamptz(6)
  trialEndDate          DateTime? @map("trial_end_date") @db.Timestamptz(6)
  subscriptionStartDate DateTime? @map("subscription_start_date") @db.Timestamptz(6)
  subscriptionEndDate   DateTime? @map("subscription_end_date") @db.Timestamptz(6)
  billingLastCheckedAt DateTime? @map("billing_last_checked_at") @db.Timestamptz(6)

  disputes         Dispute[]
  disputeResponses DisputeResponse[]

  @@map("shops")
}

model Dispute {
  id                 String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  shopId             String   @map("shop_id") @db.Uuid
  shopifyDisputeId    String   @map("shopify_dispute_id")
  orderId             String?  @map("order_id")
  orderName           String?  @map("order_name")
  customerEmail       String?  @map("customer_email")
  status              String?
  reason              String?
  chargebackReason    String?  @map("chargeback_reason")
  amount              Decimal? @db.Decimal
  currency            String?
  evidenceDueBy       DateTime? @map("evidence_due_by") @db.Timestamptz(6)
  evidenceSubmitted   Boolean? @default(false) @map("evidence_submitted")
  rawPayload          Json     @map("raw_payload") @db.JsonB
  createdAt           DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt           DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  shop             Shop              @relation(fields: [shopId], references: [id], onDelete: Cascade)
  disputeResponses DisputeResponse[]

  @@unique([shopId, shopifyDisputeId], map: "disputes_shop_dispute_unique")
  @@map("disputes")
}

model DisputeResponse {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  disputeId String   @map("dispute_id") @db.Uuid
  shopId    String   @map("shop_id") @db.Uuid
  draftText String   @map("draft_text")
  modelUsed String?  @map("model_used")
  isFinal   Boolean  @default(false) @map("is_final")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  dispute Dispute @relation(fields: [disputeId], references: [id], onDelete: Cascade)
  shop    Shop    @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId, disputeId, createdAt(sort: Desc)], map: "idx_dispute_responses_shop_dispute_created_at")
  @@map("dispute_responses")
}
